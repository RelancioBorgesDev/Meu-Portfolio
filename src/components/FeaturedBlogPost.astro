---
import { Image } from "astro:assets";
import Tag from "./Tag";
import { LuDot } from "react-icons/lu";import { formattedDate } from "../utils/formatDate";
import { countWords, getReadingTime } from "../utils/readingTime";
type Props = {
    title: string
    description: string
    tags: Array<string> 
    img: {
        src: string;
        width: number;
        height: number;
        format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif";
    };
    date: Date
    body: string
}

const {title, description, tags, img, date, body} = Astro.props

const numberOfWords = countWords(body)
const readingTime = getReadingTime(numberOfWords, 130);
const format = formattedDate(date, {typeOfAnswer: "monthAndYear"})

---


<div class="flex max-md:flex-col justify-between gap-8 hover:bg-gray-500/5 rounded-lg cursor-pointer py-2 px-4 max-md:px-0 transition-all ease-in-out duration-300">
    <div class="flex flex-col gap-4">
        <header>
            <h1 class="text-sm-title max-sm:text-2xl font-bold">{title}</h1>
            <p class="text-gray-500/95 text-description">{description}</p>
        </header>
        <footer class="flex items-center gap-.5">
            <Tag tag={format.toString()}/>
            <LuDot size={22} className="text-gray-500/95"/>
            <Tag tag={readingTime.toFixed(0).toString() + " min de leitura"}/>
            <LuDot size={22} className="text-gray-500/95"/>
            <div class="flex gap-2 items-center">
            {tags.map((tag) => (
                    <Tag tag={tag}/>
            ))}
             </div>
        </footer>
    </div>
    <Image src={img} alt={"Featured Project Image"} class="w-[239px] max-md:w-full h-[135px] bg-gray-950 rounded-lg"/>
    
</div>