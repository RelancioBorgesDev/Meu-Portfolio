---
import { Image } from 'astro:assets';
import Tag from './Tag'

type Props = {
    img: {
        src: string;
        width: number;
        height: number;
        format: "png" | "jpg" | "jpeg" | "tiff" | "webp" | "gif" | "svg" | "avif";
    };
    title: string
    description: string
    tags: Array<string>
}

const {title, description, img, tags,} = Astro.props
---

<div class="flex max-md:flex-col gap-4 hover:bg-gray-500/5 rounded-lg cursor-pointer p-2 transition-all ease-in-out duration-300">
    <Image src={img} alt={"Project Image"} class="w-[239px] max-md:w-full h-[135px] bg-gray-950 rounded-lg"/>
    <div class="flex flex-col gap-4">
        <div class="flex flex-col gap-2">
            <h1 class="text-sm-title max-sm:text-2xl font-bold">{title}</h1>
            <p class="text-description text-gray-500">{description}</p>
        </div>
        <div class="flex items-center gap-4">
            {tags.map((tag) => (
                <Tag tag={tag}/>
            ))}
        </div>
    </div>
</div>