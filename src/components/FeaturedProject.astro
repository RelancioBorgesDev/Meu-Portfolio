---
import Tag from './Tag'

type Props = {
    img?: string
    title: string
    description: string
    tags?: Array<string> 

}

const {title, description} = Astro.props
---

<div class="flex items-center gap-4 hover:bg-gray-500/5 rounded-lg cursor-pointer p-2 transition-all ease-in-out duration-300">
    <div class="w-[239px] h-[135px] bg-gray-950 rounded-lg"></div>
    <div class="flex flex-col gap-4">
        <div class="flex flex-col gap-2">
            <h1 class="text-sm-title font-bold">{title}</h1>
            <p class="text-description text-gray-500">{description}</p>
        </div>
        <div class="flex items-center gap-4">
            <Tag tag='Javascript'/>
            <Tag tag='Typescript'/>
            <Tag tag='Java'/>
        </div>
    </div>
</div>