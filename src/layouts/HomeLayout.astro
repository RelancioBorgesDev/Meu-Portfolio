---
import Nav from '../components/astro/Nav.astro'
import Head from './Head.astro';

type Props = {
	title: string
}

const { title } = Astro.props
---

<html lang="pt-BR">
	<Head title={title}/>
	<body class="bg-zinc-900 h-[100vh-96px] text-white font-poetsen-one relative">
		<section class="mx-auto min-h-[100vh-96px] px-16 font-poetsen-one flex justify-center max-lg:flex-col gap-24 pt-16 max-lg:mt-0 max-lg:py-4 max-lg:px-2 max-sm:px-0 max-lg:gap-12 ">
            <Nav/>
			<slot/>
        </section>
	</body>
</html>