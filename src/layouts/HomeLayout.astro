---
import Nav from '../components/Nav.astro'
import Head from './Head.astro';

type Props = {
	title: string
}

const { title } = Astro.props
---

<html lang="pt-BR">
	<Head title={title}/>
	<body class="bg-home h-[100vh-96px] text-main font-inter relative">
		<section class="mx-auto min-h-[100vh-96px] px-24 py-4 font-sans flex max-lg:flex-col gap-24 mt-24 max-lg:mt-0 max-lg:py-4 max-lg:px-8 max-sm:px-2 max-lg:gap-12">
            <Nav/>
            <slot/>
        </section>
	</body>
</html>