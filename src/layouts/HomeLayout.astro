---
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro'
import { ViewTransitions } from 'astro:transitions';
type Props = {
	title: string
}

const { title } = Astro.props
---

<html lang="pt-BR">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content="Meu Portoflio" />
		<meta title={title}>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
		<title>{title}</title>
        <ViewTransitions />
	</head>
	<body class="bg-home text-main font-inter relative">
		<section class="w-full flex gap-[194px] h-screen py-36 px-24">
            <Nav/>
            <slot/>
			<Footer/>
        </section>
	</body>
</html>