---
import Nav from '../components/Nav.astro'
import { ViewTransitions } from 'astro:transitions';
import logo from "../../public/logo.svg"

type Props = {
	title: string
}

const { title } = Astro.props
---

<html lang="pt-BR">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/logo.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
        <meta name="description" content="Meu Portoflio" />
		<meta title={title}>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&family=Rubik:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet">
		<title>{title}</title>
        <ViewTransitions />
	</head>
	<body class="bg-home h-[100vh-96px] text-main font-inter relative">
		<section class="mx-auto min-h-[100vh-96px] px-24 py-4 font-sans flex max-lg:flex-col gap-24 mt-24 max-lg:mt-0 max-lg:py-4 max-lg:px-8 max-sm:px-2">
            <Nav/>
            <slot/>
        </section>
	</body>
</html>